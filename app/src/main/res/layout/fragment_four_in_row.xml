<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D4253"
    android:gravity="bottom|center"
    android:orientation="vertical"
    tools:context=".fragments.FourInRowFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#003DF3"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:layout_weight="1"
            android:text="Player Blue"
            android:textColor="#FFFFFF"
            android:layout_marginRight="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:shadowColor="#D50000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:text="Player Red"
            android:layout_marginLeft="40dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_blue_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="80dp"
            android:text="0"
            android:textColor="#FF6D00"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/textView_red_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="80dp"
            android:text="0"
            android:textColor="#FF6D00"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turn_color"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_turn_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn2"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn3"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn4"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn5"
            style="@style/myButtons_4_in_row" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn6"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn7"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn8"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn9"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn10"
            style="@style/myButtons_4_in_row"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn11"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn12"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn13"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn14"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn15"
            style="@style/myButtons_4_in_row"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn16"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn17"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn18"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn19"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn20"
            style="@style/myButtons_4_in_row"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn21"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn22"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn23"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn24"
            style="@style/myButtons_4_in_row"  />

        <Button
            android:id="@+id/btn25"
            style="@style/myButtons_4_in_row"  />
    </LinearLayout>

</LinearLayout>